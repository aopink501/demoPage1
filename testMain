<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>LIFF Demo</title>
  <script src="https://static.line-scdn.net/liff/edge/2/sdk.js"></script>
</head>
<body>
  <h1>LINEミニアプリデモ</h1>
  <div id="profile"></div>

  <script>
    async function main() {
      await liff.init({ liffId: "YOUR_LIFF_ID" }); // ← LIFF IDをここに
      if (liff.isLoggedIn()) {
        const profile = await liff.getProfile();
        document.getElementById("profile").innerHTML = `
          <p>名前: ${profile.displayName}</p>
          <img src="${profile.pictureUrl}" width="100">
        `;
      } else {
        liff.login();
      }
    }
    main();
  </script>
</body>
</html>
